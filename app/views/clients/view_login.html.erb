<h1>Login List</h1>
<script src="../assets/jquery.dataTables.js"></script>
<script src="../assets/jquery.dataTables.min.js"></script>

<script type="text/javascript">
	$(document).ready(function(){	
		
    $('#sunil_datatable').dataTable();
});
</script> 

  <%unless @clients.blank?%>
<table class="table" id="sunil_datatable">
	<thead>
		<tr>
			<th>Client Name</th>
			<th>Signin Count</th>
			<!-- <th>Current signin at</th> -->
			<th>Last Signin At</th>
			</tr>
	</thead>
	<tbody>
		
		<%@clients.each_with_index do |client,index|%>
	  <%@class="tr_bg_yellow"%>
		<tr class="<%=@class%>">
			<td><strong><%unless client.is_this_trial?%>
				<%=client.client_name %>
				<%else%>
				<%=client.client_name %>(T)
				<%end%></strong></td>
			<td><%=client.user.sign_in_count%></td>
			<!-- <td><%=client.user.current_sign_in_at%></td> -->
			<td><%=client.user.last_sign_in_at.strftime("%d/%m/%Y %H:%M") unless client.user.last_sign_in_at.blank? %></td>			
		</tr>
		<%end%>
		
	</tbody>	
</table>
<%else%>
Sorry record not found.
<%end%>	
