<%unless @current_races.blank?%>
<table id="upcoming">
	<thead>
		<tr>
			<th>Race Name</th>
			<th>Description</th>
			<th>Date</th>
			<th>Time</th>
			<th>Horse</th>
			<th>Horse Place</th>
			<th>Location</th>
			<th>Default Odds</th>
			<%@tiers.each do |tier|%>	
			  <th><%=tier.name%></th>	  
			<%end%>			
			<th>Action</th>			
		</tr>
	</thead>
	<tbody>
		<%@current_races.each do |race|%>
		<tr class="tr_bg_yellow">
			<td><%=race.name%></td>
			<td><%=race.description%></td>
			<td><%=race.date.strftime("%d/%m/%Y")%></td>
			<td><%=race.time.strftime("%I:%M%p")%></td>
			<td><%=race.horse%></td>
			<td><input type="text" id="horse_no" class="edit_horse_no" value="<%=race.horse_place%>" size="5" /></td>
			<td><%=race.location%></td>
			<td><%=number_to_currency(race.default_odd)%></td>
			<%@tiers.each do |tier|%>
			<%calculated=(race.default_odd*tier.weight)/100%>
			  <td><%=number_to_currency(race.default_odd+calculated)%></td>			  
			<%end%>	
				
			<td>
			<p class="editme3" race="<%=race.id%>" horse="5">					
            <a href="#"><img src="../assets/green-tick.png"><img src="../assets/cross.png"></a>
           </p>|<%= link_to image_tag("../assets/view-icon.png"), race %>|<%= link_to 'Edit', edit_race_path(race) %> 
			</td>
			</tr>
		<%end%>		
	</tbody>
</table>
<%end%>
<h1>Previous Bets</h1>
<%@races=Race.where('status=? or status=?','win','lost')%>
<%=render 'admin_prev_races' %>