
<%= form_for(@race) do |f| %>
  <% if @race.errors.any? %>
     <ul class="alert fade in alert-error">
      <% @race.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>
  <%if @race.ticket_number.blank?%>
  <%unless Race.last.nil?%>
  <%@tnumber=(Race.last.ticket_number).next%>
  <%else%>
  <%@tnumber=ENV['ticket_number']%>
  <%end%>
  <%else%>
  <%@tnumber=@race.ticket_number%>
  <%end%>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label "Ticket Number"%></div>
    <div class="change_password_form-field"><%= f.text_field :ticket_number,:readonly=>true,:value=>@tnumber%></div>
    <div class="clr"></div>
  </div>
 <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :name%></div>
    <div class="change_password_form-field"><%= f.text_field :name,:required=>true%></div>
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :date %></div>
    <div class="change_password_form-field"><%= f.text_field :date,:required=>true,:readonly=>true%></div>
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :time %></div>
    <div class="change_password_form-field"><%= f.time_select :time,{:ampm => true},:class=>'w47'%></div>
  
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :description %></div>
    <div class="change_password_form-field"><%= f.text_area :description%></div>
  
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :race_type %></div>
    <div class="change_password_form-field"><%= f.select :race_type,['Gallop','Trots','Dogs'],:class=>'change_select'%></div>
  
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :horse %></div>
    <div class="change_password_form-field"><%= f.text_field :horse,:required=>true %></div>
    <div class="clr"></div>
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :default_odd %></div>
    <div class="change_password_form-field"><%= f.text_field :default_odd,:required=>true %></div>
    <div class="clr"></div> 
  </div>
  <div class="change_password_fields">
    <div class="change_password_names"><%= f.label :location %></div>
    <div class="change_password_form-field"><%= f.text_field :location %></div>
    <div class="clr"></div> 
  </div>
 
  <div class="change_password_fields">
  	<div class="change_password_names">&nbsp;</div>
     <div class="login_button"><%= f.submit "Save race"%></div>
     <div class="clr"></div>
  </div>
<% end %>
