<script src="../assets/jquery.dataTables.js"></script>
<script type="text/javascript">
	$(document).ready(function(){	
    $('#sunil_datatable').dataTable();
});
</script>
<%unless @races.empty?%>
<table id="sunil_datatable" class="table">
	<thead>
		<tr>
			<th>Race Name</th>
			<th>Description</th>
			<th>Date</th>
			<th>Time</th>
			<th>Horse</th>
			<th>Location</th>
			<th>Default Odds</th>			
			<th>Status</th>
			 <!-- <th>Action</th> -->
			
		</tr>
	</thead>
	<tbody>
		<%@races.each do |race|%>
		<tr class="tr_bg_yellow">
			<td><%=race.name%></td>
			<td><%=race.description%></td>
			<td><%=race.date.strftime("%d/%m/%Y")%></td>
			<td><%=race.time.strftime("%I:%M%p")%></td>
			<td><%=race.horse%></td>
			<td><%=race.location%></td>
			<td><%=number_to_currency(race.default_odd)%></td>			
			<td><%=race.status%></td>
			<!-- <td>
			<% link_to image_tag("../assets/view-icon.png"), race %> 
			</td>	 -->				
			</tr>
		<%end%>		
	</tbody>
</table>
<%else%>
Record not found.
<%end%>
