<h1>Past Trades</h1>
<script src="../assets/jquery.dataTables.js"></script>
<script type="text/javascript">
	$(document).ready(function(){	
    $('#sunil_datatable').dataTable({
        /* Disable initial sort */
        "aaSorting": []
    });
});
</script>

<%unless @races.blank?%>
<table class="table" id="sunil_datatable">
	<thead>
		<tr>
			<th>Trade Name</th>
			<th>Date</th>
			<th>Time</th>
			<th>Horse</th>
			<th>Horse No</th>
			<th>Horse Place</th>
			<th>Status</th>
			<th>Default Odds</th>	
			<th>protest</th>	
		</tr>
	</thead>
	<tbody>
		<%@races.each do |race|%>
		<tr class="tr_bg_yellow">
			<td><%=race.name%></td>
			<td><%=race.date.strftime("%d/%m/%Y")%></td>
			<td><%=race.time.strftime("%I:%M%p")%></td>
			<td><%=race.horse%></td>
			<td><%=race.horse_no%></td>
			<td><%=race.horse_place%></td>
			<td><%=race.status%></td>
			<td>$<%=race.default_odd%></td>
			<td><%=link_to 'Protest',protest_races_path(:id=>race.id),confirm: 'Do you want to rescind this race?'%></td>			
			</tr>
		<%end%>		
	</tbody>
</table>
<%else%>
Sorry record not found.
<%end%>
