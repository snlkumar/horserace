<h1>Listing white labels</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Action</th>
  </tr>

<% @resellers.each do |reseller| %>
  <tr>
    <td><%= reseller.name %></td>
    <td><%= reseller.address %></td>
    <td><%=reseller.user.email%></td>
    <td></td>
    <td><%= link_to 'Show', reseller %> | <%= link_to 'Edit', edit_reseller_path(reseller) %> | <%= link_to 'Destroy', reseller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

