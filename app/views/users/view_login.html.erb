<h1>Login List</h1>


  <%unless @users.empty?%>
<table class="table">
	<thead>
		<tr>
			<th>Client Name</th>
			<th>Signin Count</th>
			<th>Current Signin At</th>
			<th>Last Signin At</th>
			</tr>
	</thead>
	<tbody>
		
		<%@users.each_with_index do |user,index|%>
	  <%@class="tr_bg_yellow"%>
		<tr class="<%=@class%>">
			<td><strong><%unless user.is_this_trial?%>
				<%=user.client_name %>
				<%else%>
				<%=user.client_name %>(T)
				<%end%></strong></td>
			<td><%=user.sign_in_count%></td>
			<td><%=user.current_sign_in_at%></td>
			<td><%=user.last_sign_in_at%></td>			
		</tr>
		<%end%>
		
	</tbody>	
</table>
<%else%>
Sorry record not found.
<%end%>	
